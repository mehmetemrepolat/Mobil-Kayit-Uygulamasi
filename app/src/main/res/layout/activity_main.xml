<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Z_TC"
        android:layout_width="240dp"
        android:layout_height="21dp"
        android:text="TC Kimlik Numaranız:"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Z_TC_No"
        app:layout_constraintEnd_toEndOf="@+id/Z_TC_No"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Z_TC_No" />

    <EditText
        android:id="@+id/Z_TC_No"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="11"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.297" />

    <EditText
        android:id="@+id/Z_TelefonNumarasi"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="11"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <EditText
        android:id="@+id/Z_MailAdresi"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:text="Mail Adresi:1"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Z_MailAdresi"
        app:layout_constraintEnd_toEndOf="@+id/Z_MailAdresi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Z_MailAdresi" />

    <EditText
        android:id="@+id/Z_ZiyaretSebebi"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:lines="4"
        android:maxLength="80"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Z_MailAdresi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Z_MailAdresi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:text="Ziyaret Sebebi:"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Z_ZiyaretSebebi"
        app:layout_constraintEnd_toEndOf="@+id/Z_ZiyaretSebebi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Z_ZiyaretSebebi" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:text="Telefon Numarası:"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Z_TelefonNumarasi"
        app:layout_constraintEnd_toEndOf="@+id/Z_TelefonNumarasi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Z_TelefonNumarasi" />

    <EditText
        android:id="@+id/Z_SoyAdi"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:digits="abcçdefgğhiıjklmnoöpqrsştuüvwxyzABCÇDEFGĞHİIJKLMNOÖPGQRSŞTUÜVWXYZ"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="78dp"
        android:layout_height="24dp"
        android:text="Soyisim:"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Z_SoyAdi"
        app:layout_constraintEnd_toEndOf="@+id/Z_SoyAdi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Z_SoyAdi" />

    <EditText
        android:id="@+id/Z_Adi"
        android:layout_width="251dp"
        android:layout_height="48dp"
        android:digits="abcçdefgğhiıjklmnoöpqrsştuüvwxyzABCÇDEFGĞHİIJKLMNOÖPGQRSŞTUÜVWXYZ"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="62dp"
        android:layout_height="24dp"
        android:text="İsim:"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/Z_Adi"
        app:layout_constraintEnd_toEndOf="@+id/Z_Adi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Z_Adi" />

    <Button
        android:id="@+id/kayit_al"
        android:layout_width="291dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:text="Kayıt Gönder"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunucu Bağlantı Durumu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/KVKK_Text"
        android:layout_width="292dp"
        android:layout_height="24dp"
        android:text="KVKK Metnini Okudum Kabul Ediyorum."
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/KVKK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toEndOf="@+id/KVKK"
        app:layout_constraintTop_toTopOf="@+id/KVKK"
        app:layout_constraintVertical_bias="0.562" />

    <TextView
        android:id="@+id/AcikRiza_Text"
        android:layout_width="293dp"
        android:layout_height="26dp"

        android:text="Açık Rıza Metnini Okudum Kabul Ediyorum."
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/Acik_Riza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Acik_Riza"
        app:layout_constraintTop_toBottomOf="@+id/KVKK"
        app:layout_constraintVertical_bias="0.571" />

    <CheckBox
        android:id="@+id/Acik_Riza"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KVKK" />

    <CheckBox
        android:id="@+id/KVKK"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="47dp"

        android:layout_marginBottom="12dp"
        android:text="İmzala"
        app:layout_constraintBottom_toTopOf="@+id/kayit_al"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="375dp"
        android:layout_height="26dp"
        android:text="Ziyaretçi Kayıt Formu"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Z_Adi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/tarih_saat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Tarih ve Saat"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>